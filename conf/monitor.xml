<monitor>
        <name>BoundaryMonitor</name>
        <type>managed</type>
        <description>Boundary Monitor</description>
        <monitor-configuration></monitor-configuration>
        <monitor-run-task>
                <execution-style>periodic</execution-style>
                <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
                <name>Boundary Monitor Run Task</name>
                <display-name>Boundary Monitor Task</display-name>
                <description>Boundary Monitor Task</description>
                <type>java</type>
                <execution-timeout-in-secs>60</execution-timeout-in-secs>
                <java-task>
                    <classpath>BoundaryMonitor.jar;lib/log4j-1.2.15.jar;lib/machineagent.jar;lib/gson-2.2.2.jar;lib/commons-lang-2.4.jar</classpath>
                        <impl-class>com.appdynamics.monitors.boundary.BoundaryMonitor</impl-class>
                </java-task>
                <task-arguments>
                    <argument name="host" is-required="false" default-value="localhost"/>
                    <argument name="port" is-required="false" default-value="8091"/>
                    <argument name="username" is-required="false" default-value="username"/>
                    <argument name="password" is-required="false" default-value="password"/>
                </task-arguments>
        </monitor-run-task>
</monitor>
